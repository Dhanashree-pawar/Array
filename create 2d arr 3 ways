// 3 methods of creating 2d array
#include <iostream>
#include <stdio.h>
#include <stdlib.h>
using namespace std;

int main()
{
//mehtod1 eveything in std::stack ;
int A[3][4]={{1,2,3,4},{5,6,7,8},{9,6,4,2}};
//method2 partially in heap;
int *B[3];
B[0]= new int[4];
B[1]= new int[4];
B[2]= new int[4];
//method 3 completely in heap
int **C;
C = new int[3];
C[0]= new int[4];
C[1]= new int[4];
C[2]= new int[4];

    return 0;
}
